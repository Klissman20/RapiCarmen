<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/firebrick</item>
        <item name="colorAccent">@color/crimson</item>
        <!--<item name="android:windowBackground">@drawable/splash</item>-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item><!-- para cambiar el color del icono menu-->
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/red</item>
    </style>

    <style name="ToolbarTheme.text" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/creamcake</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>