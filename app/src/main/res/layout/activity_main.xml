<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbare"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        app:popupTheme="@style/ToolbarTheme"
        app:title="@string/app_name"
        app:titleTextAppearance="@style/ToolbarTheme.text"
        app:logo="@mipmap/ic_launcher_rapicarmen"/>

    <FrameLayout
        android:id="@+id/barra_busqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red">

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:queryHint="@string/hint_search"
            android:iconifiedByDefault="false"
            android:background="@color/white"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/barra_busqueda"
        android:background="@drawable/bg_shadow" />


    <GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="200dp"
        android:numColumns="3"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:verticalSpacing="@dimen/espacio_grilla"
        android:horizontalSpacing="@dimen/espacio_grilla"/>

</LinearLayout>